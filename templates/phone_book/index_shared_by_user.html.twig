{% extends 'base.html.twig' %}

{% block title %}PhoneBook index{% endblock %}

{% block body %}
    <h1>{{ 'shared_by_users'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'full_name'|trans }}</th>
            <th>{{ 'phone'|trans }}</th>
            <th>{{ 'shared_by_user'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for userContact in userContacts %}
            <tr>
                <td>{{ userContact.phoneBook.fullName }}</td>
                <td>{{ userContact.phoneBook.phone }}</td>
                <td>{{ userContact.sharedByUser.username }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
