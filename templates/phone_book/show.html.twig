{% extends 'base.html.twig' %}

{% block title %}{{ 'contact'|trans }}{% endblock %}

{% block body %}
    <h3>{{ 'contact'|trans }} - "{{ phone_book.fullName }}"</h3>
    <a class="btn btn-success"
       href="{{ path('phone_book_share', {'id': phone_book.id}) }}">{{ 'share_with_user'|trans }}</a>

    <br>
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ phone_book.id }}</td>
        </tr>
        <tr>
            <th>{{ 'full_name'|trans }}</th>
            <td>{{ phone_book.fullName }}</td>
        </tr>
        <tr>
            <th>{{ 'phone'|trans }}</th>
            <td>{{ phone_book.phone }}</td>
        </tr>
        </tbody>
    </table>


    <a class="btn btn-outline-info" href="{{ path('phone_book_edit', {'id': phone_book.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('phone_book/_delete_form.html.twig') }}
    <br>
    <a class="btn btn-orange" href="{{ path('phone_book_index_all') }}">{{ 'back_to_list'|trans }}</a>
{% endblock %}
